    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "internalConsoleOptions": "openOnFirstSessionStart",
        },
        {
            // dlv debug --headless --listen=:2345 --api-version=2
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345,
            "host": "127.0.0.1",
            "remotePath": "${workspaceFolder}",
        }
    ]
}